{
    "apps" : [
        {
            "name"             : "papaya",
            "script"           : "server.js",
            "env_production" : {
                "NODE_ENV": "production",
                "DEBUG": "service:*",
                "DEBUG_COLORS": true,
                "REGION": "production"
            },
            "env_development" : {
                "NODE_ENV": "development",
                "DEBUG": "service:*",
                "DEBUG_COLORS": true,
                "REGION": "sandbox"
            },
            "env_debug" : {
                "NODE_ENV": "debug",
                "DEBUG": "service:*",
                "DEBUG_COLORS": true,
                "REGION": "debug"
            }
        }
    ],

    "deploy" : {
        "production" : {
            "user" : "root",
            "host" : "master.whalejoy.com",
            "ref"  : "origin/master",
            "repo" : "git@git.whalejoy.com:/data/repos/papaya.git",
            "path" : "/home/whalejoy/production/papaya",
            "post-deploy" : "npm install && pm2 startOrRestart ecosystem.account.json --env production",
            "env": {
                "NODE_ENV": "production",
                "DEBUG": "service:*",
                "REGION": "production"
            }
        },
        "development" : {
            "user" : "root",
            "host" : "sandbox.whalejoy.com",
            "ref"  : "origin/master",
            "repo" : "git@git.whalejoy.com:/data/repos/papaya.git",
            "path" : "/home/whalejoy/development/papaya",
            "post-deploy" : "npm install && pm2 startOrRestart ecosystem.account.json --env development",
            "env"  : {
                "NODE_ENV": "development",
                "DEBUG": "service:*",
                "REGION": "sandbox"
            }
        },
        "debug" : {
            "user" : "root",
            "host" : "192.168.80.253",
            "ref"  : "origin/master",
            "repo" : "git@git.whalejoy.com:/data/repos/papaya.git",
            "path" : "/home/yomato/development/papaya",
            "post-deploy" : "npm install && pm2 startOrRestart ecosystem.account.json --env debug",
            "env"  : {
                "NODE_ENV": "debug",
                "DEBUG": "service:*",
                "REGION": "debug"
            }
        }
    }
}
